<div class="form-container">
  <h1>Log In</h1>

  <%= form_with url: login_path, local: true do |form| %>
    <div>
      <%= form.label :username %>
      <%= form.text_field :username, class: "form-control" %>
    </div>

    <div>
      <%= form.label :password %>
      <%= form.password_field :password, class: "form-control" %>
    </div>

    <div>
      <%= form.submit "Log In", class: "btn" %>
    </div>
  <% end %>
</div>
